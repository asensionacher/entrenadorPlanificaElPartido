<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar cambios"
        android:id="@+id/button_elegir_titulares"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_anadir_jugador"
        android:layout_alignEnd="@+id/button_anadir_jugador" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃ±adir jugador (Primero los titulares)"
        android:id="@+id/button_anadir_jugador"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/button_anadir_jugador"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_elegir_titulares"
        android:layout_alignRight="@+id/button_anadir_jugador"
        android:layout_alignEnd="@+id/button_anadir_jugador" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linear_layout_main"></LinearLayout>
    </ScrollView>

</RelativeLayout>
