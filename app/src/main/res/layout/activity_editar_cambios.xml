<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sergi.entrenadorplanificaelpartido.EditarCambios"
    android:id="@+id/relative_layout_editar_cambios"
    android:background="@drawable/field">


    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_portero_cambio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_lateral_izquierdo_cambio"
        android:layout_above="@+id/spinner_portero_cambio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_central_cambio"
        android:layout_alignTop="@+id/spinner_lateral_izquierdo_cambio"
        android:layout_alignLeft="@+id/spinner_portero_cambio"
        android:layout_alignStart="@+id/spinner_portero_cambio" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_lateral_derecho_cambio"
        android:layout_alignTop="@+id/spinner_central_cambio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_medio_izquierdo_cambio"
        android:layout_below="@+id/spinner_delantero_Cambio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_medio_derecho_cambio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/spinner_medio_izquierdo_cambio" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_delantero_Cambio"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/spinner_central_cambio"
        android:layout_alignStart="@+id/spinner_central_cambio" />
</RelativeLayout>
